    $scope.preCreateFolderFunction = function (parentFolderName, parentFolderId) {

        $('#createFolderModel').modal()

       // $('#createFolder_parentName').val(parentFolderName);
        //$('#createFolder_parentFolderId').val(parentFolderId);
